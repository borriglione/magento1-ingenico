$iban = $this->getCollectorIbanParameter();
$bic = $this->getCollectorBicParameter();
$payReference = $this->getPaymentReferenceParameter();
?>
<p><?php echo $this->htmlEscape($this->getMethod()->getTitle()) ?></p>

<?php if ($this->isEmailAction() && $this->isPendingPayment()) : ?>
<p>
    <?php echo $this->htmlEscape(__('Please transfer to:'))?>
</p>
<?php endif;?>

<p>
    <?php if (isset($iban)) : ?>
    <?php echo Mage::helper('payment')->__('IBAN: %s', $this->htmlEscape($iban)) ?>
    <br>
    <?php endif;?>
    <?php if (isset($bic)) : ?>
    <?php echo Mage::helper('payment')->__('BIC: %s', $this->htmlEscape($bic)) ?>
    <br>
    <?php endif;?>
    <?php if (isset($payReference)) : ?>
    <?php echo Mage::helper('payment')->__('Payment Reference: %s', $this->htmlEscape($payReference)) ?>
    <?php endif;?>
</p>

